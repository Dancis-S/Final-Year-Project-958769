<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/message_firstProfilePic"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/profile_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/message_firstText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:background="@drawable/second_user_text_bg"
        android:paddingStart="10dp"
        android:paddingTop="8dp"
        android:paddingRight="8dp"
        android:paddingBottom="10dp"
        android:text="This is a message"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/message_firstProfilePic"
        app:layout_constraintEnd_toStartOf="@+id/message_secondProfilePic"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/message_firstProfilePic"
        app:layout_constraintTop_toTopOf="@+id/message_firstProfilePic"
        app:layout_constraintWidth_default="wrap" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/message_secondProfilePic"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/profile_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/message_secondText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:background="@drawable/first_user_text_bg"
        android:paddingStart="10dp"
        android:paddingTop="8dp"
        android:paddingRight="8dp"
        android:paddingBottom="10dp"
        android:text="This is a message"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/message_secondProfilePic"
        app:layout_constraintEnd_toStartOf="@+id/message_secondProfilePic"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/message_firstProfilePic"
        app:layout_constraintTop_toTopOf="@+id/message_secondProfilePic"
        app:layout_constraintWidth_default="wrap" />

</androidx.constraintlayout.widget.ConstraintLayout>