<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="686dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/main_profileImagePost"
                android:layout_width="92dp"
                android:layout_height="86dp"
                android:src="@drawable/profile_icon"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.053"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.019"></de.hdodenhof.circleimageview.CircleImageView>

            <TextView
                android:id="@+id/main_profileUsernamePost"
                android:layout_width="227dp"
                android:layout_height="36dp"
                android:text="username"
                android:textColor="#000000"
                android:textSize="24dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.4"
                app:layout_constraintStart_toEndOf="@+id/main_profileImagePost"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.023" />

            <TextView
                android:id="@+id/main_timeAgo"
                android:layout_width="171dp"
                android:layout_height="22dp"
                android:text="Time ago"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.38"
                app:layout_constraintStart_toEndOf="@+id/main_profileImagePost"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.087" />

            <TextView
                android:id="@+id/main_postDescription"
                android:layout_width="343dp"
                android:layout_height="38dp"
                android:layout_marginBottom="528dp"
                android:text="Post description"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.326"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/main_timeAgo"
                app:layout_constraintVertical_bias="0.708" />

            <ImageView
                android:id="@+id/main_postImage"
                android:layout_width="410dp"
                android:layout_height="194dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/main_postDescription"
                app:layout_constraintVertical_bias="0.026"
                app:srcCompat="@drawable/dev_image" />

            <ImageView
                android:id="@+id/main_likeImage"
                android:layout_width="35dp"
                android:layout_height="33dp"
                android:layout_marginBottom="244dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.07"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/main_postImage"
                app:layout_constraintVertical_bias="0.105"
                app:srcCompat="@drawable/ic_like_icon" />

            <TextView
                android:id="@+id/main_likeCounter"
                android:layout_width="37dp"
                android:layout_height="29dp"
                android:layout_marginEnd="284dp"
                android:layout_marginBottom="312dp"
                android:text="99"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/main_likeImage"
                app:layout_constraintTop_toBottomOf="@+id/main_postImage"
                app:layout_constraintVertical_bias="0.619" />

            <ImageView
                android:id="@+id/main_commentImage"
                android:layout_width="37dp"
                android:layout_height="30dp"
                android:layout_marginBottom="216dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.949"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/main_postImage"
                app:layout_constraintVertical_bias="0.094"
                app:srcCompat="@drawable/ic_comment" />

            <TextView
                android:id="@+id/main_commentCounter"
                android:layout_width="30dp"
                android:layout_height="27dp"
                android:layout_marginStart="256dp"
                android:layout_marginBottom="308dp"
                android:text="0"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/main_commentImage"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/main_postImage"
                app:layout_constraintVertical_bias="0.555" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>