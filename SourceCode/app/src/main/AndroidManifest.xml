<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.socialfitnessapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SocialFitnessApp">
        <activity android:name=".Social.ChatActivity"></activity>
        <activity android:name=".Social.ViewProfileActivity">
            android:theme="@style/Theme.Transparent"
        </activity>
        <activity android:name=".Social.FindFriendActivity">
            android:windowSoftInputMode="adjustNothing"
        </activity>
        <activity android:name=".Profile.EditProfileActivity" />
        <activity android:name=".Social.SocialActivity" />
        <activity android:name=".MyDiary.MyDiaryActivity" />
        <activity android:name=".Authentication.RegInfoTwoActivity" />
        <activity android:name=".Authentication.RegInfoOneActivity" />
        <activity android:name=".Authentication.RegisterActivity" />
        <activity android:name=".Profile.ProfileActivity" />
        <activity android:name=".Authentication.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Home.MainActivity" />
    </application>

</manifest>